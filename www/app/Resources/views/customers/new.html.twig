{% extends 'base.html.twig' %}

{% form_theme form 'fields.html.twig' %}

{% block title %}Customer Add/Edit{% endblock %}

{% block page_title %}Customer Add/Edit<small>Please provide valid customer information below.</small>{% endblock %}

{% block body %}
{{ form_start(form) }}
<div class="row">
	<div class="col-md-4">
		<div class="box box-primary">
		  <div class="box-header with-border">
			<h3 class="box-title">Add/Edit Customer</h3>
		  </div>
		  <div class="box-body">
		  	{{ form_widget(form) }}
		  </div>
		  <div class="box-footer">
			<input type="submit" value="Save" class="btn btn-primary"/>
		  </div>
		</div>
	</div>
</div>
{{ form_end(form) }}
{% endblock %}